{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "files": {
        "include": [
            "src/**/*.{ts,tsx,js,jsx,json}",
            "tailwind.config.ts"
        ],
        "ignore": [
            "node_modules",
            ".next",
            ".biome"
        ]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 2,
        "lineWidth": 80
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double",
            "trailingComma": "es5"
        }
    }
}